<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/inverse"
    tools:context="com.sbhacks.ektashahani.roadtrip.PickerActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="386dp"
        android:layout_height="618dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="424dp"
        android:layout_height="41dp"
        android:background="@color/SaffronMango"
        android:elevation="22dp"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        android:layout_marginTop="48dp"
        app:layout_constraintRight_toRightOf="@+id/textView3" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="136dp"
        android:layout_height="25dp"
        android:elevation="22dp"
        app:srcCompat="@mipmap/text"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="7dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="286dp"
        android:layout_height="180dp"
        android:fontFamily="sans-serif-light"
        android:lines="2"
        android:text="How are you feeling?"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:layout_marginTop="96dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.66" />

    <AutoCompleteTextView
        android:id="@+id/moodEnterView"
        android:layout_width="246dp"
        android:layout_height="46dp"
        android:background="@color/colorPrimaryDark"
        android:hint="Mood?"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="@+id/textView"
        android:layout_marginTop="62dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintRight_toRightOf="@+id/textView"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:paddingLeft="10dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView"
        app:layout_constraintHorizontal_bias="1.0" />

    <Button
        android:id="@+id/btn_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        app:layout_constraintTop_toTopOf="@+id/textView"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintRight_toRightOf="@+id/textView"
        app:layout_constraintLeft_toLeftOf="@+id/textView"
        app:layout_constraintHorizontal_bias=".5" />

</android.support.constraint.ConstraintLayout>
